


<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-3 <%= 'fixed-top' if current_page?(root_path)  %>" style="<%= 'background: transparent;' if current_page?(root_path) %>, padding: 0; margin: 0;" >
  <%= link_to root_path , class: "navbar-brand" do %>
    <%= image_tag "logo-biqom.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<% unless current_page?(root_path) %>
  <div class="container d-inline-flex justify-content-around">
    <%= link_to activities_path , class: "navbar-brand" do %>
    <% if current_page?(activities_path)  %>
      <%= image_tag "cat-circle.png", class: "logo" %>
    <% else  %>
      <%= image_tag "activities.png", class: "logo" %>
    <% end %>
    <% end %>
    <%= link_to my_activities_path , class: "navbar-brand" do %>
    <% if current_page?(my_activities_path)  %>
      <%= image_tag "cat-umbrella.png", class: "logo" %>
    <% else  %>
      <%= image_tag "my-activities.png", class: "logo" %>
    <% end %>
    <% end %>
    <%= link_to user_challenges_path , class: "navbar-brand" do %>
      <% if current_page?(user_challenges_path)  %>
      <%= image_tag "cat-dumb.png", class: "logo" %>
    <% else  %>
    <%= image_tag "my-challenges.png", class: "logo" %>
    <% end  %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to user_chalenges_dashboard_path , class: "navbar-brand" do %>
        <% if current_page?(user_chalenges_dashboard_path) %>
      <%= image_tag "acrobate.png", class: "logo" %>
      <% else %>
      <%= image_tag "dashboard.png", class: "logo" %>
      <% end %>
      <% end %>
      <%= link_to destroy_user_session_path , method: :delete, class: "navbar-brand" do %>
      <%= image_tag "signout.png", class: "logo" %>
      <% end %>
    <% else  %>
      <%= link_to new_user_session_path , class: "navbar-brand" do %>
      <%= image_tag "signin.png", class: "logo" %>
      <% end %>
      <%= link_to new_user_registration_path , class: "navbar-brand" do %>
      <%= image_tag "signup.png", class: "logo" %>
      <% end  %>
    <% end %>

  </div>
<% end %>
</div>

