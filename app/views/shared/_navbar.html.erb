


<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-3 <%= 'fixed-top' if current_page?(root_path)  %>" style="<%= 'background: transparent;' if current_page?(root_path) %>, padding: 0; margin: 0;" >
  <%= link_to root_path , class: "navbar-brand" do %>
    <%= image_tag "logo-biqom.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<% unless current_page?(root_path) %>
  <div class="container d-inline-flex justify-content-around">
    <%= link_to activities_path , class: "navbar-brand" do %>
    <%= image_tag "activities.png", class: "logo" %>
    <% end %>
    <%= link_to my_activities_path , class: "navbar-brand" do %>
    <%= image_tag "my-activities.png", class: "logo" %>
    <% end %>
    <%= link_to user_challenges_path , class: "navbar-brand" do %>
    <%= image_tag "my-challenges.png", class: "logo" %>
    <% end  %>
  </div>
<% end %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
         <button type="button" class="btn-log"> <%= link_to "Login", new_user_session_path, class: "nav-link" %></button>
        </li>
      <% end %>
    </ul>
  </div>
</div>

